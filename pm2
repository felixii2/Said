import discord
from discord.ext import commands

Créer une instance du bot avec un préfixe de commande
bot = commands.Bot(command_prefix='!')

@bot.event
async def on_ready():
    print(f'Bot connecté en tant que {bot.user}')

@bot.command()
async def ping(ctx):
    await ctx.send('Pong!')

Démarrer le bot
bot.run('')